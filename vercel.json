{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "routes": [
      { 
        "src": "/(.*)",  
        "dest": "/api/index.php" 
      },
      { "src": "/LGC.js", "dest": "/api/LGC.js" },
      { "src": "/api/(.*)", "methods": ["POST"], "dest": "/api/$1" }
    ]
  }
  